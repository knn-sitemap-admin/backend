<div class="owner-performance-page">
    <div class="op-page-header">
        <h1>사원 / 팀 실적</h1>
        <div class="op-page-subtitle">
            완료 계약 / 답사 종료 / 답사 예정 기준 랭킹
        </div>
    </div>

    <%
    const periodMode = (filter.period === 'custom') ? 'custom' : 'preset';

    const sumContractsStaff = contractsByStaff.reduce((sum, r) => sum + (r.contractCount || 0), 0);
    const sumContractsTeam = contractsByTeam.reduce((sum, r) => sum + (r.contractCount || 0), 0);
    const sumSurveys = surveysByStaff.reduce((sum, r) => sum + (r.surveyCount || 0), 0);
    const sumScheduled = scheduledByStaff.reduce((sum, r) => sum + (r.scheduledCount || 0), 0);

    const topContractStaff = contractsByStaff[0] || null;
    const topContractTeam = contractsByTeam[0] || null;
    const topSurveyStaff = surveysByStaff[0] || null;
    const topScheduledStaff = scheduledByStaff[0] || null;

    const formatNumber = (n) => Number(n || 0).toLocaleString('ko-KR');
    %>

    <!-- 필터 영역 -->
    <form method="get" class="op-filter-form">
        <div class="op-filter-row">
            <div class="op-field">
                <label for="opQTeam">담당 팀</label>
                <select name="qTeam" id="opQTeam">
                    <option value="">전체 팀</option>
                    <% if (Array.isArray(teams)) { %>
                        <% teams.forEach(function(t) { %>
                            <option value="<%= t.name %>" <%= filter.qTeam === t.name ? 'selected' : '' %>>
                                <%= t.name %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </div>

            <div class="op-field">
                <label for="opQSalesperson">담당자</label>
                <input
                        type="text"
                        id="opQSalesperson"
                        name="qSalesperson"
                        value="<%= filter.qSalesperson || '' %>"
                        placeholder="담당자 이름"
                />
            </div>

            <div class="op-field op-field-period">
                <div class="op-period-top">
                    <span class="op-period-label">기간 (계약 / 답사)</span>
                    <label class="op-radio-inline">
                        <input
                                type="radio"
                                name="periodMode"
                                value="preset"
                                <%= periodMode === 'preset' ? 'checked' : '' %>
                        />
                        빠른선택
                    </label>
                    <label class="op-radio-inline">
                        <input
                                type="radio"
                                name="periodMode"
                                value="custom"
                                <%= periodMode === 'custom' ? 'checked' : '' %>
                        />
                        직접입력
                    </label>
                </div>

                <div class="op-period-preset">
                    <select name="periodPreset" id="opPeriodPreset">
                        <option value="today"   <%= filter.period === 'today' ? 'selected' : '' %>>오늘</option>
                        <option value="week"    <%= filter.period === 'week' ? 'selected' : '' %>>1주일</option>
                        <option value="month"   <%= filter.period === 'month' ? 'selected' : '' %>>1개월</option>
                        <option value="quarter" <%= filter.period === 'quarter' ? 'selected' : '' %>>3개월</option>
                        <option value="half"    <%= filter.period === 'half' ? 'selected' : '' %>>6개월</option>
                        <option value="year"    <%= filter.period === 'year' ? 'selected' : '' %>>1년</option>
                    </select>
                </div>

                <div class="op-period-custom">
                    <input
                            type="date"
                            name="from"
                            value="<%= filter.from || '' %>"
                    />
                    <span>~</span>
                    <input
                            type="date"
                            name="to"
                            value="<%= filter.to || '' %>"
                    />
                </div>

                <input type="hidden" name="period" id="opHiddenPeriod" value="<%= filter.period %>" />
            </div>

            <div class="op-field op-field-buttons">
                <label>&nbsp;</label>
                <div class="op-filter-buttons">
                    <button type="submit">조회</button>
                    <a href="/owner/performance" class="op-btn-reset">초기화</a>
                </div>
            </div>
        </div>
    </form>

    <!-- KPI 카드 -->
    <div class="op-kpi-row">
        <div class="op-kpi-card op-kpi-contract-staff">
            <div class="op-kpi-label">완료 계약 TOP 사원</div>
            <div class="op-kpi-value">
                <%= topContractStaff ? (topContractStaff.salespersonName || '-') : '-' %>
            </div>
            <div class="op-kpi-desc">
                계약 <%= topContractStaff ? topContractStaff.contractCount : 0 %>건 / 전체 <%= sumContractsStaff %>건
            </div>
        </div>

        <div class="op-kpi-card op-kpi-contract-team">
            <div class="op-kpi-label">완료 계약 TOP 팀</div>
            <div class="op-kpi-value">
                <%= topContractTeam ? (topContractTeam.teamName || '-') : '-' %>
            </div>
            <div class="op-kpi-desc">
                계약 <%= topContractTeam ? topContractTeam.contractCount : 0 %>건 / 전체 <%= sumContractsTeam %>건
            </div>
        </div>

        <div class="op-kpi-card op-kpi-survey">
            <div class="op-kpi-label">답사 완료 TOP 사원</div>
            <div class="op-kpi-value">
                <%= topSurveyStaff ? (topSurveyStaff.accountName || '-') : '-' %>
            </div>
            <div class="op-kpi-desc">
                답사 <%= topSurveyStaff ? topSurveyStaff.surveyCount : 0 %>건 / 전체 <%= sumSurveys %>건
            </div>
        </div>

        <div class="op-kpi-card op-kpi-scheduled">
            <div class="op-kpi-label">답사 예정 TOP 사원</div>
            <div class="op-kpi-value">
                <%= topScheduledStaff ? (topScheduledStaff.accountName || '-') : '-' %>
            </div>
            <div class="op-kpi-desc">
                예정 <%= topScheduledStaff ? topScheduledStaff.scheduledCount : 0 %>건 / 전체 <%= sumScheduled %>건
            </div>
        </div>
    </div>

    <!-- 표 영역 -->
    <div class="op-table-section">
        <!-- 계약 실적: 사원별 -->
        <div class="op-table-panel">
            <div class="op-table-header">
                <div class="op-table-title">사원별 완료 계약 순위</div>
                <div class="op-table-subtitle">
                    상태: 계약 완료
                </div>
            </div>
            <div class="op-table-wrapper">
                <table class="op-data-table">
                    <thead>
                    <tr>
                        <th>순위</th>
                        <th>담당자</th>
                        <th>담당 팀</th>
                        <th>완료 계약 건수</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!contractsByStaff.length) { %>
                        <tr>
                            <td colspan="4" class="op-empty-cell">
                                선택한 조건에 해당하는 계약 실적 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% contractsByStaff.forEach(function(row, idx) { %>
                            <tr>
                                <td class="op-num"><%= idx + 1 %></td>
                                <td><%= row.salespersonName || '-' %></td>
                                <td><%= row.teamName || '-' %></td>
                                <td class="op-num"><%= row.contractCount %></td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 계약 실적: 팀별 -->
        <div class="op-table-panel">
            <div class="op-table-header">
                <div class="op-table-title">팀별 완료 계약 순위</div>
                <div class="op-table-subtitle">
                    계약 완료 기준
                </div>
            </div>
            <div class="op-table-wrapper">
                <table class="op-data-table">
                    <thead>
                    <tr>
                        <th>순위</th>
                        <th>팀 이름</th>
                        <th>완료 계약 건수</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!contractsByTeam.length) { %>
                        <tr>
                            <td colspan="3" class="op-empty-cell">
                                선택한 조건에 해당하는 팀 실적 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% contractsByTeam.forEach(function(row, idx) { %>
                            <tr>
                                <td class="op-num"><%= idx + 1 %></td>
                                <td><%= row.teamName || '-' %></td>
                                <td class="op-num"><%= row.contractCount %></td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 답사 완료 실적 -->
        <div class="op-table-panel">
            <div class="op-table-header">
                <div class="op-table-title">사원별 답사 완료 순위</div>
                <div class="op-table-subtitle">
                    승격된 핀 기준
                </div>
            </div>
            <div class="op-table-wrapper">
                <table class="op-data-table">
                    <thead>
                    <tr>
                        <th>순위</th>
                        <th>담당자</th>
                        <th>담당 팀</th>
                        <th>답사 완료 건수</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!surveysByStaff.length) { %>
                        <tr>
                            <td colspan="4" class="op-empty-cell">
                                선택한 조건에 해당하는 답사 완료 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% surveysByStaff.forEach(function(row, idx) { %>
                            <tr>
                                <td class="op-num"><%= idx + 1 %></td>
                                <td><%= row.accountName || '-' %></td>
                                <td><%= row.teamName || '-' %></td>
                                <td class="op-num"><%= row.surveyCount %></td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 답사 예정 실적 -->
        <div class="op-table-panel">
            <div class="op-table-header">
                <div class="op-table-title">사원별 답사 예정 순위</div>
                <div class="op-table-subtitle">
                    답사 예약된 기준
                </div>
            </div>
            <div class="op-table-wrapper">
                <table class="op-data-table">
                    <thead>
                    <tr>
                        <th>순위</th>
                        <th>담당자</th>
                        <th>담당 팀</th>
                        <th>답사 예정 건수</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!scheduledByStaff.length) { %>
                        <tr>
                            <td colspan="4" class="op-empty-cell">
                                현재 기준 답사 예정 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% scheduledByStaff.forEach(function(row, idx) { %>
                            <tr>
                                <td class="op-num"><%= idx + 1 %></td>
                                <td><%= row.accountName || '-' %></td>
                                <td><%= row.teamName || '-' %></td>
                                <td class="op-num"><%= row.scheduledCount %></td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/static/js/owner-performance.js"></script>

<style>
