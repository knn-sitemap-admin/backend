    }

    .op-filter-buttons button,
    .op-btn-reset {
        padding: 4px 10px;
        font-size: 13px;
        border-radius: 2px;
        border: 1px solid #ccc;
        background: #f8f8f8;
        cursor: pointer;
        text-decoration: none;
        color: #333;
    }

    .op-filter-buttons button:hover,
    .op-btn-reset:hover {
        background: #eee;
    }

    .op-period-top {
        display: flex;
