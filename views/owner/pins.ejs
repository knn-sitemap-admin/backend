<div class="owner-pin-stats-page">
    <div class="ops-page-header">
        <h1>핀 통계</h1>
    </div>

    <!-- 필터 영역 -->
    <div class="ops-filter-row">
        <select id="filterCity" class="ops-select">
            <option value="all">전체 지역</option>
            <option value="seoul">서울</option>
            <option value="incheon">인천</option>
            <option value="gyeonggi">경기</option>
        </select>

        <select id="filterPeriod" class="ops-select">
            <option value="month">1개월</option>
            <option value="quarter">3개월</option>
            <option value="half">6개월</option>
            <option value="year" selected>1년</option>
            <option value="custom">직접입력</option>
        </select>

        <input type="date" id="filterFrom" class="ops-date" disabled>
        <span class="ops-range-sep">~</span>
        <input type="date" id="filterTo" class="ops-date" disabled>

        <button id="applyFilterBtn" class="ops-apply-btn">적용</button>
    </div>

    <!-- 요약 카드 -->
    <div class="ops-summary-row">
        <div class="ops-summary-card">
            <div class="ops-summary-label">전체 핀 수</div>
            <div id="statTotalPins" class="ops-summary-value">0</div>
        </div>

        <div class="ops-summary-card">
            <div class="ops-summary-label">가장 많은 도시</div>
            <div id="statTopCity" class="ops-summary-value">-</div>
        </div>

        <div class="ops-summary-card">
            <div class="ops-summary-label">임시핀(답사전)</div>
            <div id="statDraftBefore" class="ops-summary-value">0</div>
        </div>

        <div class="ops-summary-card">
            <div class="ops-summary-label">임시핀(답사예정/예약)</div>
            <div id="statScheduled" class="ops-summary-value">0</div>
        </div>
    </div>

    <!-- 도시별 핀 수 -->
    <div class="ops-table-panel">
        <div class="ops-table-header">
            <div class="ops-table-title">도시별 핀 수</div>
        </div>
        <div class="ops-table-wrapper">
            <table class="ops-table">
                <thead>
                <tr>
                    <th>도시</th>
                    <th>핀 수</th>
                </tr>
                </thead>
                <tbody id="cityStatsBody"></tbody>
            </table>
        </div>
    </div>

    <!-- 지역구별 핀 수 TOP20 -->
    <div class="ops-table-panel">
        <div class="ops-table-header">
            <div class="ops-table-title">지역구별 핀 수 (TOP 20)</div>
        </div>
        <div class="ops-table-wrapper">
            <table class="ops-table">
                <thead>
                <tr>
                    <th>지역구</th>
                    <th>핀 수</th>
                </tr>
                </thead>
                <tbody id="districtStatsBody"></tbody>
            </table>
        </div>
    </div>

    <!-- 답사전 임시핀 -->
    <div class="ops-table-panel">
        <div class="ops-table-header">
            <div class="ops-table-title">답사전 임시핀 (지역구별 TOP 20)</div>
        </div>
        <div class="ops-table-wrapper">
            <table class="ops-table">
                <thead>
                <tr>
                    <th>지역구</th>
                    <th>갯수</th>
                </tr>
                </thead>
                <tbody id="draftBeforeStatsBody"></tbody>
            </table>
        </div>
    </div>

    <!-- 예약된 답사 예정 -->
    <div class="ops-table-panel">
        <div class="ops-table-header">
            <div class="ops-table-title">예약된 답사예정 (지역구별 TOP 20)</div>
        </div>
        <div class="ops-table-wrapper">
            <table class="ops-table">
                <thead>
                <tr>
                    <th>지역구</th>
                    <th>갯수</th>
                </tr>
                </thead>
                <tbody id="scheduledStatsBody"></tbody>
            </table>
        </div>
    </div>
</div>

