<div class="owner-finance-page">
    <div class="of-page-header">
        <h1>매출 / 정산 분석</h1>
        <div class="of-page-subtitle">
            완료된 계약 기준으로 기간별 매출 / 회사 / 사원 / 팀 정산 현황
        </div>
    </div>

    <%
    const periodMode = (filter.period === 'custom') ? 'custom' : 'preset';
    const totalAmount = summary.totalAmount || 0;
    const formatNumber = (n) => Number(n || 0).toLocaleString('ko-KR');
    const formatPercent = (part, total) => {
        const p = Number(total) > 0 ? (Number(part || 0) / Number(total) * 100) : 0;
        return p.toFixed(1);
    };
    %>

    <!-- 필터 영역 -->
    <form method="get" class="of-filter-form">
        <div class="of-filter-row">
            <div class="of-field">
                <label for="qTeam">담당 팀</label>
                <select name="qTeam" id="qTeam">
                    <option value="">전체 팀</option>
                    <% if (Array.isArray(teams)) { %>
                        <% teams.forEach(function(t) { %>
                            <option value="<%= t.name %>" <%= filter.qTeam === t.name ? 'selected' : '' %>>
                                <%= t.name %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </div>

            <div class="of-field">
                <label for="qSalesperson">담당자</label>
                <input
                        type="text"
                        id="qSalesperson"
                        name="qSalesperson"
                        value="<%= filter.qSalesperson || '' %>"
                        placeholder="담당자 이름"
                />
            </div>

            <div class="of-field of-field-period">
                <div class="of-period-top">
                    <span class="of-period-label">기간</span>
                    <label class="of-radio-inline">
                        <input
                                type="radio"
                                name="periodMode"
                                value="preset"
                                <%= periodMode === 'preset' ? 'checked' : '' %>
                        />
                        빠른선택
                    </label>
                    <label class="of-radio-inline">
                        <input
                                type="radio"
                                name="periodMode"
                                value="custom"
                                <%= periodMode === 'custom' ? 'checked' : '' %>
                        />
                        직접입력
                    </label>
                </div>

                <div class="of-period-preset">
                    <select name="periodPreset" id="ofPeriodPreset">
                        <option value="today"   <%= filter.period === 'today' ? 'selected' : '' %>>오늘</option>
                        <option value="week"    <%= filter.period === 'week' ? 'selected' : '' %>>1주일</option>
                        <option value="month"   <%= filter.period === 'month' ? 'selected' : '' %>>1개월</option>
                        <option value="quarter" <%= filter.period === 'quarter' ? 'selected' : '' %>>3개월</option>
                        <option value="half"    <%= filter.period === 'half' ? 'selected' : '' %>>6개월</option>
                        <option value="year"    <%= filter.period === 'year' ? 'selected' : '' %>>1년</option>
                    </select>
                </div>

                <div class="of-period-custom">
                    <input
                            type="date"
                            name="from"
                            value="<%= filter.from || '' %>"
                    />
                    <span>~</span>
                    <input
                            type="date"
                            name="to"
                            value="<%= filter.to || '' %>"
                    />
                </div>

                <input type="hidden" name="period" id="ofHiddenPeriod" value="<%= filter.period %>" />
            </div>

            <div class="of-field of-field-buttons">
                <label>&nbsp;</label>
                <div class="of-filter-buttons">
                    <button type="submit">조회</button>
                    <a href="/owner/finance" class="of-btn-reset">초기화</a>
                </div>
            </div>
        </div>
    </form>

    <!-- KPI 카드 -->
    <div class="of-kpi-row">
        <div class="of-kpi-card of-kpi-total">
            <div class="of-kpi-label">선택 기간 총 매출</div>
            <div class="of-kpi-value"><%= formatNumber(summary.totalAmount) %>원</div>
            <div class="of-kpi-desc">계약 금액 합계</div>
        </div>

        <div class="of-kpi-card of-kpi-company">
            <div class="of-kpi-label">회사 수령액/순 이익</div>
            <div class="of-kpi-value"><%= formatNumber(summary.companyAmount) %>원</div>
            <div class="of-kpi-desc">
                비율: <%= formatPercent(summary.companyAmount, totalAmount) %>%
            </div>
        </div>

        <div class="of-kpi-card of-kpi-staff">
            <div class="of-kpi-label">사원 수령액(전체)</div>
            <div class="of-kpi-value"><%= formatNumber(summary.staffAmount) %>원</div>
            <div class="of-kpi-desc">
                비율: <%= formatPercent(summary.staffAmount, totalAmount) %>%
            </div>
        </div>

        <div class="of-kpi-card of-kpi-count">
            <div class="of-kpi-label">완료된 계약 건수</div>
            <div class="of-kpi-value"><%= summary.totalContracts %>건</div>
            <div class="of-kpi-desc">상태 = 계약완료</div>
        </div>
    </div>

    <!-- 테이블 구역 -->
    <div class="of-table-section">
        <div class="of-table-panel">
            <div class="of-table-header">
                <div class="of-table-title">사원별 정산 요약</div>
                <div class="of-table-subtitle">
                    담당자 기준 분배 금액 및 참여 계약 수
                </div>
            </div>

            <div class="of-table-wrapper">
                <table class="of-data-table">
                    <thead>
                    <tr>
                        <th>담당자</th>
                        <th>소속 팀</th>
                        <th>계약 건수</th>
                        <th>정산 금액 합계</th>
                        <th>총 매출중 비율(%)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!bySalesperson.length) { %>
                        <tr>
                            <td colspan="5" class="of-empty-cell">
                                선택한 조건에 해당하는 사원 정산 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% bySalesperson.forEach(function(row) { %>
                            <tr>
                                <td><%= row.salespersonName || '-' %></td>
                                <td><%= row.teamName || '-' %></td>
                                <td class="of-num"><%= row.contractCount %></td>
                                <td class="of-num"><%= formatNumber(row.totalAmount) %></td>
                                <td class="of-num">
                                    <%= formatPercent(row.totalAmount, totalAmount) %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="of-table-panel">
            <div class="of-table-header">
                <div class="of-table-title">팀별 정산 요약</div>
                <div class="of-table-subtitle">
                    팀 소속 사원들의 정산 금액 합계
                </div>
            </div>

            <div class="of-table-wrapper">
                <table class="of-data-table">
                    <thead>
                    <tr>
                        <th>팀 이름</th>
                        <th>계약 건수</th>
                        <th>정산 금액 합계</th>
                        <th>비율(%)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (!byTeam.length) { %>
                        <tr>
                            <td colspan="4" class="of-empty-cell">
                                선택한 조건에 해당하는 팀 정산 데이터가 없습니다.
                            </td>
                        </tr>
                    <% } else { %>
                        <% byTeam.forEach(function(row) { %>
                            <tr>
                                <td><%= row.teamName || '-' %></td>
                                <td class="of-num"><%= row.contractCount %></td>
                                <td class="of-num"><%= formatNumber(row.totalAmount) %></td>
                                <td class="of-num">
                                    <%= formatPercent(row.totalAmount, totalAmount) %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/static/js/owner-finance.js"></script>

